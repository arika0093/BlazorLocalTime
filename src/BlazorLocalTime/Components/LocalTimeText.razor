@namespace BlazorLocalTime

@if (Value != null && LocalTimeService.IsTimeZoneInfoAvailable)
{
    @if (!DisableTimeElement)
    {
        <time datetime="@IsoDateTime">@FormattedValue</time>
    }
    else
    {
        @FormattedValue
    }
}
@if (Value == null)
{
    if(OnNullContent != null)
    {
        @OnNullContent
    }
    else if(OnNullText != null)
    {
        @OnNullText
    }
}
