@namespace BlazorLocalTime

@if (ChildContent != null && LocalTimeService.IsTimeZoneInfoAvailable)
{
    @ChildContent(LocalTimeService.GetBrowserTimeZone())
}
else if (OnLoading != null && LocalTimeService.IsSuccessLoadBrowserTimeZone == null)
{
    @OnLoading
}
else if (OnError != null && LocalTimeService.IsSuccessLoadBrowserTimeZone == false)
{
    @OnError
}

